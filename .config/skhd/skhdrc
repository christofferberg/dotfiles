# Navigation
# cmd + alt + lctrl + shift - h : yabai -m window --focus west
# cmd + alt + lctrl + shift - j : yabai -m window --focus south
# cmd + alt + lctrl + shift - k : yabai -m window --focus north
# cmd + alt + lctrl + shift - l : yabai -m window --focus east

# Fast focus desktop
alt - 0 : yabai -m space --focus recent

# Focusing displays
# lctrl - 1  : yabai -m display --focus 1
# lctrl - 2  : yabai -m display --focus 2
# lctrl - 3  : yabai -m display --focus 3

# Moving windows
# shift + alt - h : yabai -m window --warp west
# shift + alt - j : yabai -m window --warp south
# shift + alt - k : yabai -m window --warp north
# shift + alt - l : yabai -m window --warp east

# Focus space relative to active display
# alt - 1 : yabai -m space --focus $(yabai -m query --spaces --display | jq '.[0].index')
# alt - 2 : yabai -m space --focus $(yabai -m query --spaces --display | jq '.[1].index')
# alt - 3 : yabai -m space --focus $(yabai -m query --spaces --display | jq '.[2].index')
# alt - 4 : yabai -m space --focus $(yabai -m query --spaces --display | jq '.[3].index')
# alt - 5 : yabai -m space --focus $(yabai -m query --spaces --display | jq '.[4].index')
# alt - 6 : yabai -m space --focus $(yabai -m query --spaces --display | jq '.[5].index')

# Move focus container to workspace
cmd + alt + lctrl + shift - p : yabai -m window --space prev; yabai -m space --focus prev
cmd + alt + lctrl + shift - n : yabai -m window --space next; yabai -m space --focus next
cmd + alt + lctrl + shift - 1 : yabai -m window --space 1; yabai -m space --focus 1
cmd + alt + lctrl + shift - 2 : yabai -m window --space 2; yabai -m space --focus 2
cmd + alt + lctrl + shift - 3 : yabai -m window --space 3; yabai -m space --focus 3
cmd + alt + lctrl + shift - 4 : yabai -m window --space 4; yabai -m space --focus 4
cmd + alt + lctrl + shift - 5 : yabai -m window --space 5; yabai -m space --focus 5
cmd + alt + lctrl + shift - 6 : yabai -m window --space 6; yabai -m space --focus 6
cmd + alt + lctrl + shift - 7 : yabai -m window --space 7; yabai -m space --focus 7

# Resize windows
cmd + alt + lctrl + shift - 0x1B : yabai -m window --resize left:-100:0; yabai -m window --resize right:-100:0 
cmd + alt + lctrl + shift - down : yabai -m window --resize bottom:0:100; yabai -m window --resize top:0:100
cmd + alt + lctrl + shift - up : yabai -m window --resize top:0:-100; yabai -m window --resize bottom:0:-100
cmd + alt + lctrl + shift - 0x18 : yabai -m window --resize right:100:0; yabai -m window --resize left:100:0

# Equalize size of windows
shift + alt - 0 : yabai -m space --balance
cmd + alt + lctrl + shift - 0 : yabai -m space --balance

# Enable / Disable gaps in current workspace
shift + alt - g : yabai -m space --toggle padding; yabai -m space --toggle gap

# Rotate windows clockwise and anticlockwise
alt - r : yabai -m space --rotate 90

# Cycle windows
alt - w : yabai -m window --focus next || yabai -m window --focus first
alt + shift - w : yabai -m window --focus prev || yabai -m window --focus last

# Rotate on X and Y Axis
alt - x : yabai -m space --mirror x-axis
alt - y : yabai -m space --mirror y-axis

# Float / Unfloat window
cmd + alt + lctrl + shift - space : yabai -m window --toggle float; yabai -m window 

# Make window native fullscreen
alt - f         : yabai -m window --toggle zoom-fullscreen
