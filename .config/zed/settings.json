// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "features": {
    "inline_completion_provider": "supermaven",
    "copilot": false
  },
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_size": 15,
  "buffer_font_weight": 400,
  "buffer_line_height": {
    "custom": 2.8
  },
  "cursor_blink": false,
  "preferred_line_length": 100,
  "relative_line_numbers": true,
  "show_whitespaces": "none",
  "show_wrap_guides": false,
  "theme": "Gruvbox Dark - Berg",
  "ui_font_family": "Inter",
  "ui_font_size": 15,
  "vertical_scroll_margin": 10,
  "vim_mode": true,
  "vim": {
    "use_multiline_find": true,
    "use_smartcase_find": true,
    "use_system_clipboard": "always"
  },
  "indent_guides": {
    "enabled": false
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 5000
    }
  },
  "tab_bar": {
    "show": false,
    "show_nav_history_buttons": false
  },
  "tabs": {
    "close_position": "right",
    "git_status": false
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  },
  "scrollbar": {
    "show": "never"
  },
  "gutter": {
    "code_actions": false,
    "folds": false,
    "line_numbers": true,
    "runnables": false
  },
  "chat_panel": {
    "button": true
  },
  "notification_panel": {
    "button": true,
    "default_width": 340
  },
  "collaboration_panel": {
    "button": true,
    "default_width": 340
  },
  "diagnostics": {
    "include_warnings": true
  },
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-20240620"
    },
    "default_height": 340.0,
    "enabled": true,
    "version": "2",
    "default_width": 340
  },
  "outline_panel": {
    "dock": "left",
    "button": true,
    "default_width": 340
  },
  "project_panel": {
    "auto_reveal_entries": true,
    "button": true,
    "default_width": 340,
    "dock": "right"
  },
  "terminal": {
    "button": true,
    "copy_on_select": true,
    "line_height": {
      "custom": 2.8
    }
  },
  "git": {
    "git_gutter": "hide",
    "inline_blame": {
      "delay_ms": 3000,
      "enabled": true,
      "min_column": 0
    }
  },
  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "classAttributes": ["class", "className", "tv", "cn", "clsx", "styles"]
      }
    }
  },
  "languages": {
    "TSX": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    }
  }
}
