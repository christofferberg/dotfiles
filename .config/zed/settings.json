// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  // General Settings
  "restore_on_startup": "last_workspace",
  "preferred_line_length": 100,
  "vertical_scroll_margin": 10,

  // Theme and Appearance
  "theme": "Kanagawa Wave",
  "ui_font_family": "Inter",
  "ui_font_size": 15,
  "buffer_font_family": "JetBrainsMonoNL Nerd Font",
  "buffer_font_size": 15,
  "buffer_font_weight": 400,
  "buffer_line_height": {
    "custom": 2.8
  },
  "cursor_blink": false,
  "cursor_shape": "block",
  "show_whitespaces": "none",
  "show_wrap_guides": false,
  "relative_line_numbers": true,

  // Editor Behavior
  "format_on_save": "on",
  "formatter": "auto",
  "vim_mode": true,
  "vim": {
    "use_multiline_find": true,
    "use_smartcase_find": true,
    "use_system_clipboard": "always"
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 5000
    }
  },
  "indent_guides": {
    "enabled": false
  },

  // UI Elements
  "tab_bar": {
    "show": false,
    "show_nav_history_buttons": false
  },
  "tabs": {
    "close_position": "right",
    "git_status": false,
    "file_icons": false
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  },
  "scrollbar": {
    "show": "never"
  },
  "gutter": {
    "code_actions": false,
    "folds": false,
    "line_numbers": true,
    "runnables": false
  },

  // Panels and Features
  "chat_panel": {
    "button": true
  },
  "notification_panel": {
    "button": true,
    "default_width": 340
  },
  "collaboration_panel": {
    "button": true,
    "default_width": 340
  },
  "outline_panel": {
    "dock": "left",
    "button": true,
    "default_width": 340,
    "auto_reveal_entries": false,
    "scrollbar": {
      "show": "never"
    },
    "indent_guides": {
      "show": "never"
    }
  },
  "project_panel": {
    "auto_reveal_entries": true,
    "indent_guides": {
      "show": "never"
    },
    "button": true,
    "default_width": 480,
    "dock": "right"
  },
  "terminal": {
    "button": true,
    "copy_on_select": true,
    "line_height": {
      "custom": 2.8
    }
  },

  // Completion
  "show_inline_completions": true,
  "show_completions_on_input": true,
  "show_completion_documentation": true,

  // AI and Assistance
  "features": {
    "inline_completion_provider": "supermaven"
  },
  "assistant": {
    "dock": "right",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "default_height": 340,
    "enabled": true,
    "version": "2",
    "default_width": 840
  },

  // Language and Formatting
  "diagnostics": {
    "include_warnings": true
  },
  "code_actions_on_format": {
    "source.fixAll.eslint": true
  },
  "lsp": {
    "biome": {
      "settings": {
        "require_config_file": true
      }
    },
    "tailwindcss-language-server": {
      "settings": {
        "classAttributes": ["class", "className", "tv", "cn", "clsx", "styles"]
      }
    }
  },

  // Git Integration
  "git": {
    "git_gutter": "hide",
    "inline_blame": {
      "delay_ms": 3000,
      "enabled": true,
      "min_column": 0
    }
  }
}
